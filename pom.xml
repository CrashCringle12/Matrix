<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>MatrixBending</groupId>
    <artifactId>MatrixPlugin</artifactId>
    <version>1.1.1</version>

    <!--Repositories-->
    <repositories>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <!--Dependencies-->
    <dependencies>
        <!--Spigot-->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.15.1-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <!--ProjectKorra-->
        <dependency>
            <groupId>com.projectkorra</groupId>
            <artifactId>projectkorra</artifactId>
            <version>1.8.9</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/PK.jar</systemPath>
        </dependency>
        
        <dependency>
            <groupId>com.Essentials</groupId>
            <artifactId>essentials</artifactId>
            <version>1.8.9</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/Essentials.jar</systemPath>
        </dependency>
        
        <dependency>
            <groupId>com.skills</groupId>
            <artifactId>skills</artifactId>
            <version>1.8.9</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/SkillsPro.jar</systemPath>
        </dependency>
		<dependency>
            <groupId>com.factions</groupId>
            <artifactId>factions</artifactId>
            <version>1.8.9</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/Factions.jar</systemPath>
		</dependency>
        <dependency>
            <groupId>com.skins</groupId>
            <artifactId>skins</artifactId>
            <version>1.8.9</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/SkinsRestorer.jar</systemPath>
        </dependency>
        
        <dependency>
            <groupId>com.werewolf</groupId>
            <artifactId>swerewolf</artifactId>
            <version>1.8.7</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/Werewolf.jar</systemPath>
        </dependency>
        
       	<dependency>
            <groupId>com.vampirerevamp</groupId>
            <artifactId>vampirerevamp</artifactId>
            <version>1.0.3</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/VampireRevamp.jar</systemPath>
        </dependency>
        
        <dependency>
            <groupId>com.pex</groupId>
            <artifactId>pex</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/PermissionsEx-1.23.4.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.45</version>
        </dependency>

        <dependency>
            <groupId>com.authme</groupId>
            <artifactId>authme</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/AuthMe.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.worldedit</groupId>
            <artifactId>worldedit</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/worldedit-bukkit-7.1.0.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.awe</groupId>
            <artifactId>awe</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/AsyncWorldEdit-3.6.19.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.achievements</groupId>
            <artifactId>achievements</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/Utils/AdvancedAchievements.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>clean package install</defaultGoal>
        <finalName>${project.name}-${project.version}</finalName>
        <sourceDirectory>${project.basedir}/src/</sourceDirectory>
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>${project.basedir}/src/</directory>
                <includes>
                    <include>plugin.yml</include>
                    <include>battlepass.yml</include>
                    <include>arenamanager.yml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration />
            </plugin>
        </plugins>
    </build>

</project>